<?xml version="1.0"?>
<config>
  <tabs>
    <lucid_extensions translate="label" module="salesrep">
      <label>Lucid Path Extensions</label>
      <sort_order>1000000</sort_order>
    </lucid_extensions>
  </tabs>
  <sections>
    <salesrep>
      <label>Sales Representative Pro</label>
      <tab>lucid_extensions</tab>
      <frontend_type>text</frontend_type>
      <sort_order>999999</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <module_status translate="label">
          <label>Module Status</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <enabled translate="label">
              <label>Module is Active</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enabled>
          </fields>
        </module_status>
        <setup translate="label">
          <label>Commissions</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <default_status translate="label">
              <label>Default Status for New Orders</label>
              <frontend_type>select</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_DefaultStatusList</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </default_status>
            <default_commission_rate translate="label">
              <label>Default Commission Rate</label>
              <frontend_type>text</frontend_type>
              <sort_order>15</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </default_commission_rate>
            <pay_commissions_based_on translate="label">
              <label>Pay Commissions Based On</label>
              <frontend_type>select</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_CommissionBasedList</source_model>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </pay_commissions_based_on>
          </fields>
        </setup>
        <email_reports translate="label">
          <label>Email Reports</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <email_send translate="label">
              <label>Send Report</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </email_send>
            <email_template translate="label">
              <label>Email Template</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_email_template</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </email_template>
            <send_reports_to translate="label">
              <label>Send Reports to</label>
              <frontend_type>select</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_SendReportsTo</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </send_reports_to>
            <schedule_hour translate="label">
              <label>Hour</label>
              <frontend_type>select</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_HoursList</source_model>
              <sort_order>15</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment><![CDATA[<i>Uses the same time zone as your server settings.</i>]]></comment>
            </schedule_hour>
            <schedule_minute translate="label">
              <label>Minute</label>
              <frontend_type>select</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_MinutesList</source_model>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </schedule_minute>
            <schedule_frequency translate="label">
              <label>Frequency</label>
              <frontend_type>select</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_Frequency</source_model>
              <sort_order>25</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment><![CDATA[<i>If there is no information available for the requested period or requested employee, no report will be sent.</i>]]></comment>
            </schedule_frequency>
          </fields>
        </email_reports>
        <order_grid translate="label">
          <label>Order Grid</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <commission_earner translate="label">
              <label>Commission Earner</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </commission_earner>
            <commission_amount translate="label">
              <label>Commission Amount</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </commission_amount>
            <commission_payment_status translate="label">
              <label>Commission Payment Status</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>15</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment><![CDATA[<i>Information in the order grid is displayed based on the permissions established under the "Commissions" tab.</i>]]></comment>
            </commission_payment_status>
          </fields>
        </order_grid>
        <step_setup translate="label">
          <label>Checkout</label>
          <frontend_type>text</frontend_type>
          <sort_order>3</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <admin_step_enabled translate="label">
              <label>Display representative selector at back-end (admin) checkout</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment><![CDATA[<i>Back end selector will show all user names, regardless of which users you choose to display on the front end selector. If not, orders are automatically assigned to the account that creates them.</i>]]></comment>
            </admin_step_enabled>
            <step_enabled translate="label">
              <label>Display representative selector at front-end (customer) checkout</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </step_enabled>
            <step_header translate="label">
              <label>Header</label>
              <frontend_type>text</frontend_type>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </step_header>
            <step_label translate="label">
              <label>Label</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </step_label>
            <step_error_msg translate="label">
              <label>Error Message</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>15</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </step_error_msg>
            <users translate="label">
              <label>Users</label>
              <comment>Use Ctrl to select multiple Users.</comment>
              <frontend_type>multiselect</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_UsersList</source_model>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </users>
          </fields>
        </step_setup>

        <reports_setup translate="label">
          <label>Reports Default Values</label>
          <frontend_type>text</frontend_type>
          <sort_order>4</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <statuses translate="label">
              <label>Order Statuses</label>
              <comment>Use Ctrl to select multiple Users.</comment>
              <frontend_type>multiselect</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_StatusesList</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </statuses>
            <admins translate="label">
              <label>Sales Rep.</label>
              <comment>Use Ctrl to select multiple Users.</comment>
              <frontend_type>multiselect</frontend_type>
              <source_model>LucidPath_SalesRepPro_Model_Source_UsersList</source_model>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </admins>
          </fields>
        </reports_setup>
      </groups>
    </salesrep>
  </sections>
</config>
