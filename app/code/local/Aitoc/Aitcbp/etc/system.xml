<?xml version="1.0"?>
<config>
    <sections>
        <catalog>
            <groups>
                <aitcbp translate="label" module="aitcbp">
                    <label>Automatic Pricing Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Automatic Pricing Enabled by Default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>aitcbp/system_config_backend_catalog_aitcbp_enabled</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <reindex>
                            <label>Use improved schema of price re-indexing</label>
                            <comment>Selecting Yes disables some minor checks at the process of price reindexing, speeding up the entire process of either product or price group resaving. Please use this setting if you're experiencing troubles with resaving at a product or price group level.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model> 
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reindex>
                    </fields>
                </aitcbp>
            </groups>
        </catalog>
    </sections>
</config>