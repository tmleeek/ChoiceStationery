<config>
    <modules>
        <Amasty_Finder>
            <version>2.2.13</version>
        </Amasty_Finder>
    </modules>


    <crontab>
        <jobs>
            <amfinder_clear_archive_data>
                <schedule><cron_expr>0 23 * * *</cron_expr></schedule>
                <run><model>amfinder/importLogHistory::clearArchive</model></run>
            </amfinder_clear_archive_data>

            <amfinder_run_import>
                <schedule><cron_expr>30 2 * * * *</cron_expr></schedule>
                <run><model>amfinder/import::runAll</model></run>
            </amfinder_run_import>
        </jobs>
    </crontab>

    <global>
        <models>
            <amfinder>
                <class>Amasty_Finder_Model</class>
                <resourceModel>amfinder_mysql4</resourceModel>
            </amfinder>
            <amfinder_mysql4>
                <class>Amasty_Finder_Model_Mysql4</class>
                <entities>
                    <finder>
                        <table>am_finder_finder</table>
                    </finder>
                    <dropdown>
                        <table>am_finder_dropdown</table>
                    </dropdown>
                    <value>
                        <table>am_finder_value</table>
                    </value>
                    <universal>
                        <table>am_finder_universal</table>
                    </universal>                                        
                    <map>
                        <table>am_finder_map</table>
                    </map>
                    <import_file_log>
                        <table>am_finder_import_file_log</table>
                    </import_file_log>
                    <import_file_log_errors>
                        <table>am_finder_import_file_log_errors</table>
                    </import_file_log_errors>
                    <import_file_log_history>
                        <table>am_finder_import_file_log_history</table>
                    </import_file_log_history>
                </entities>
            </amfinder_mysql4>
        </models>

        <resources>
            <amfinder_setup>
                <setup>
                    <module>Amasty_Finder</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </amfinder_setup>

            <amfinder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </amfinder_write>

            <amfinder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </amfinder_read>
        </resources>

        <blocks>
            <amfinder>
                <class>Amasty_Finder_Block</class>
            </amfinder>
            
        </blocks>

        <helpers>
            <amfinder>
                <class>Amasty_Finder_Helper</class>
            </amfinder>
        </helpers>
    </global>

     <frontend>
        <routers>
            <amfinder>
                <use>standard</use>
                <args>
                    <module>Amasty_Finder</module>
                    <frontName>amfinder</frontName>
                </args>
            </amfinder>
        </routers> 
        <translate>
            <modules>
                <Amasty_Finder>
                    <files>
                        <default>Amasty_Finder.csv</default>
                    </files>
                </Amasty_Finder>
            </modules>
        </translate>
        <layout>
              <updates>
                  <amfinder module="Amasty_Finder">
                      <file>amfinder.xml</file>
                  </amfinder>
              </updates>
        </layout>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <amasty_finder before="Mage_Adminhtml">Amasty_Finder_Adminhtml</amasty_finder>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>    


   <adminhtml>
        <menu>
		    <catalog>
                <children>
                    <amfinder translate="title" module="amfinder">
                        <title>Product Finders</title>
                        <sort_order>910</sort_order>
                        <action>adminhtml/finder/index</action>
                    </amfinder>
                </children>
            </catalog>
		</menu>

		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <amfinder>
                                    <title>Product Finders</title>
                                </amfinder>
                            </children>
                        </catalog>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <amfinder>
                                            <title>Product Finders</title>
                                        </amfinder>
                                    </children>
                                </config>
                            </children>
                        </system>
                     </children>
                </admin>
			</resources>
		</acl>
        <translate>
            <modules>
                <Amasty_Finder>
                    <files>
                        <default>Amasty_Finder.csv</default>
                    </files>
                </Amasty_Finder>
            </modules>
        </translate>

       <layout>
           <updates>
               <amfinder module="Amasty_Finder">
                   <file>amasty/amfinder/amfinder.xml</file>
               </amfinder>
           </updates>
       </layout>
    </adminhtml>

    <default>
        <amfinder>
           <general>
                <category_search>0</category_search>
                <partial_search>0</partial_search>
                <universal>1</universal>
                <seo_urls>0</seo_urls> 
                <auto_submit>0</auto_submit>               
                <separator>-</separator>                
                <suffix></suffix> 
                <reset_home>default</reset_home>
                <clear_other_conditions>0</clear_other_conditions>
				<apply_catalogsearch>0</apply_catalogsearch>
				<redirect_single_product>0</redirect_single_product>
            </general>
            <import>
                <archive_lifetime>30</archive_lifetime>
                <max_rows_per_import>1000</max_rows_per_import>
            </import>
        </amfinder>
    </default>  

</config>
