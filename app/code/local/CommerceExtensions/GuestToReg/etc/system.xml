<config>
    <tabs>
        <commerceextensions translate="label" module="GuestToReg">
            <label>Commerce Extensions</label>
            <sort_order>210</sort_order>
        </commerceextensions>
    </tabs> 
    <sections>
        <guesttoreg translate="label" module="GuestToReg"> 
			<label>Guests To Registered Customers Settings</label>
			<tab>commerceextensions</tab>
			<frontend_type>text</frontend_type>
			<sort_order>90</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
            <groups>
                <guesttoreg translate="label">
                    <label>Guests To Registered Customers</label>
                    <sort_order>765</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <disable_ext translate="label">
                            <label>Enable Automatic Guest to Customer Account At Checkout</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </disable_ext>
                        <disable_new_customer_email translate="label">
                            <label>Disable New Customer Email</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If disabled new (converted) customers will NOT receive a email with a new username and password.</comment>
                        </disable_new_customer_email>
                        <disable_button_ext translate="label">
                            <label>Enable Guest to Customer Account Button At Success/Checkout</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </disable_button_ext>
                        <merged_customer_group translate="label">
                            <label>Select Customer Group (only used for automatic merge)</label>
                            <frontend_type>select</frontend_type>
							<source_model>GuestToReg/config_source_listMode</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </merged_customer_group>
                    </fields>
                </guesttoreg>				
            </groups>
        </guesttoreg>
    </sections>
</config>
