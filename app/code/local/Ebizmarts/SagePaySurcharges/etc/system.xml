<?xml version="1.0"?>
<config>
    <sections>
        <sagepaysuite module="sagepaysuite">
            <groups>
                <surcharge translate="label">
                    <label><![CDATA[Sage Pay Suite [Surcharges]]]></label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <credit_cards>
                            <label>Credit Cards</label>
                            <config_path>payment/sagepaysuite/surcharge_creditcards</config_path>
                            <frontend_model>sagepaysurcharges/adminhtml_system_config_form_field_surchargecc</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </credit_cards>
                        <tax_class translate="label">
                            <label>Tax Class</label>
                            <frontend_type>select</frontend_type>
                            <config_path>payment/sagepaysuite/surcharge_taxclass</config_path>
                            <source_model>adminhtml/system_config_source_shipping_taxclass</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tax_class>
                    </fields>
                </surcharge>
            </groups>
        </sagepaysuite>
    </sections>
</config>
