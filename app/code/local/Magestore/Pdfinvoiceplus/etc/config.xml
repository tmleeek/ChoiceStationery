<config>
    <modules>
        <Magestore_Pdfinvoiceplus>
            <version>0.1.1</version>
        </Magestore_Pdfinvoiceplus>
    </modules>
    <frontend>
        <routers>
            <pdfinvoiceplus>
                <use>standard</use>
                <args>
                    <module>Magestore_Pdfinvoiceplus</module>
                    <frontName>pdfinvoiceplus</frontName>
                </args>
            </pdfinvoiceplus>
        </routers>
        <layout>
            <updates>
                <pdfinvoiceplus>
                    <file>pdfinvoiceplus.xml</file>
                </pdfinvoiceplus>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Pdfinvoiceplus>
                    <files>
                        <default>Magestore_Pdfinvoiceplus.csv</default>
                    </files>
                </Magestore_Pdfinvoiceplus>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <pdfinvoiceplusadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_Pdfinvoiceplus</module>
                    <frontName>pdfinvoiceplusadmin</frontName>
                </args>
            </pdfinvoiceplusadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <pdfinvoiceplus>
                    <file>pdfinvoiceplus.xml</file>
                </pdfinvoiceplus>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Pdfinvoiceplus>
                    <files>
                        <default>Magestore_Pdfinvoiceplus.csv</default>
                    </files>
                </Magestore_Pdfinvoiceplus>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <pdfinvoiceplus>
                <class>Magestore_Pdfinvoiceplus_Model</class>
                <resourceModel>pdfinvoiceplus_mysql4</resourceModel>
            </pdfinvoiceplus>
            <pdfinvoiceplus_mysql4>
                <class>Magestore_Pdfinvoiceplus_Model_Mysql4</class>
                <entities>
                     <template>
                        <table>pdfinvoiceplus_template</table>
                    </template>
                    <systemtemplate>
                        <table>pdfinvoiceplus_system_template</table>
                    </systemtemplate>
                </entities>
            </pdfinvoiceplus_mysql4>
        </models>
        <resources>
            <pdfinvoiceplus_setup>
                <setup>
                    <module>Magestore_Pdfinvoiceplus</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pdfinvoiceplus_setup>
            <pdfinvoiceplus_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pdfinvoiceplus_write>
            <pdfinvoiceplus_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pdfinvoiceplus_read>
        </resources>
        <blocks>
            <pdfinvoiceplus>
                <class>Magestore_Pdfinvoiceplus_Block</class>
            </pdfinvoiceplus>
            <adminhtml>
                <rewrite>
                    <sales_order_invoice_view>Magestore_Pdfinvoiceplus_Block_Adminhtml_Sales_Order_Invoice_View</sales_order_invoice_view>
                    <sales_order_creditmemo_view>Magestore_Pdfinvoiceplus_Block_Adminhtml_Sales_Order_Creditmemo_View</sales_order_creditmemo_view>
                    <sales_order_view>Magestore_Pdfinvoiceplus_Block_Adminhtml_Sales_Order_View</sales_order_view>
                </rewrite>
            </adminhtml>
            <sales>
                <rewrite>
                    <order_info_buttons>Magestore_Pdfinvoiceplus_Block_Sales_Order_Info_Buttons</order_info_buttons>
                    <order_creditmemo_items>Magestore_Pdfinvoiceplus_Block_Sales_Order_Creditmemo_Items</order_creditmemo_items>
                    <order_invoice_items>Magestore_Pdfinvoiceplus_Block_Sales_Order_Invoice_Items</order_invoice_items>
                </rewrite>
            </sales>
        </blocks>
        <helpers>
            <pdfinvoiceplus>
                <class>Magestore_Pdfinvoiceplus_Helper</class>
            </pdfinvoiceplus>
        </helpers>
        <!-- <events>
            <controller_action_predispatch>
                <observers>
                    <pdfinvoiceplus_observers>
                        <class>pdfinvoiceplus/observer</class>
                        <method>controllerActionPredispatch</method>
                    </pdfinvoiceplus_observers>
                </observers>
            </controller_action_predispatch>
        </events> -->
    </global>
    <default>
        <pdfinvoiceplus>
            <general>
                <enable>1</enable>
                <use_multistore>0</use_multistore>
            </general>
        </pdfinvoiceplus>
    </default>
</config>