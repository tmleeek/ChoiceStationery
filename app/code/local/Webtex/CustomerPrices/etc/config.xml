<config>
  <modules>
    <Webtex_CustomerPrices>
      <version>2.9.0</version>
    </Webtex_CustomerPrices>
  </modules>
  <frontend>
        <layout>
            <updates>
                <customerprices>
                    <file>customerprices.xml</file>
                </customerprices>
            </updates>
        </layout>
  </frontend>
  <global>
    <models>
        <customerprices>
            <class>Webtex_CustomerPrices_Model</class>
            <resourceModel>customerprices_mysql4</resourceModel>
        </customerprices>
        <customerprices_mysql4>
            <class>Webtex_CustomerPrices_Model_Mysql4</class>
            <entities>
                <prices>
                    <table>customerprices_prices</table>
                </prices>
            </entities>
        </customerprices_mysql4>
        <resource>
            <rewrite>
                <product_collection>Webtex_CustomerPrices_Model_Resource_Product_Collection</product_collection>
            </rewrite>
        </resource>
      <catalog_resource_eav_mysql4>
	<rewrite>
	  <layer_filter_price>Webtex_CustomerPrices_Model_Mysql4_Catalog_Layer_Filter_Price</layer_filter_price>
	</rewrite>
      </catalog_resource_eav_mysql4>
    <catalog>
        <rewrite>
            <product>Webtex_CustomerPrices_Model_Product</product>
            <product_type_price>Webtex_CustomerPrices_Model_Product_Type_Price</product_type_price>
	    <product_type_configurable_price>Webtex_CustomerPrices_Model_Product_Type_Configurable_Price</product_type_configurable_price>
        </rewrite>
    </catalog>
    </models>
    <resources>
            <customerprices_setup>
                <setup>
                    <module>Webtex_CustomerPrices</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customerprices_setup>
            <customerprices_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customerprices_write>
            <customerprices_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customerprices_read>
    </resources>
    <blocks>
      <customerprices>
	<class>Webtex_CustomerPrices_Block</class>
      </customerprices>
            <catalog>
                <rewrite>
		    <product_view>Webtex_CustomerPrices_Block_Catalog_Product_View</product_view>
                    <product_price>Webtex_CustomerPrices_Block_Catalog_Product_Price</product_price>
	            <product_view_type_configurable>Webtex_CustomerPrices_Block_Catalog_Product_View_Type_Configurable</product_view_type_configurable>
	            <layer_filter_price>Webtex_CustomerPrices_Block_Catalog_Layer_Filter_Price</layer_filter_price>
                </rewrite>
            </catalog>
      <adminhtml>
          <rewrite>
             <!-- <catalog_product_edit_tabs>Webtex_CustomerPrices_Block_Adminhtml_Catalog_Product_Tabs</catalog_product_edit_tabs> -->
              <customer_edit_tabs>Webtex_CustomerPrices_Block_Adminhtml_Customer_Edit_Tabs</customer_edit_tabs>
          </rewrite>
      </adminhtml>
      <bundle>
	<rewrite>
	  <catalog_product_price>Webtex_CustomerPrices_Block_Bundle_Catalog_Product_Price</catalog_product_price>
	</rewrite>
      </bundle>
    </blocks>
        <helpers>
            <customerprices>
                <class>Webtex_CustomerPrices_Helper</class>
            </customerprices>
        </helpers>
  <events>
    <!-- <checkout_cart_product_add_after>
      <observers>
        <customerprices>
          <class>customerprices/observer</class>
          <method>productAddToCartAfter</method>
        </customerprices>
      </observers>
    </checkout_cart_product_add_after> -->
    <checkout_cart_save_before>
      <observers>
        <customerprices>
          <class>customerprices/observer</class>
          <method>productAddToCartBefore</method>
        </customerprices>
      </observers>
    </checkout_cart_save_before>
    <!-- <checkout_cart_update_items_after>
      <observers>
        <customerprices>
          <class>customerprices/observer</class>
          <method>productAddToCartBefore</method>
        </customerprices>
      </observers>
    </checkout_cart_update_items_after> -->
      <catalog_block_product_list_collection>
	<observers>
	  <customerprices>
	    <class>customerprices/observer</class>
	    <method>layeredPrice</method>
	  </customerprices>
	  <customerprices_price_order>
	    <class>customerprices/observer</class>
	    <method>sortByPrice</method>
	  </customerprices_price_order>
	</observers>
      </catalog_block_product_list_collection>
	<catalog_product_save_after>
		<observers>
			<customerprices>
				<class>customerprices/observer</class>
				<method>productSaveAfter</method>
			</customerprices>
		</observers>
        </catalog_product_save_after>
        <catalog_block_product_list_collection>
            <observers>
		<!-- <customerprices>
			<class>customerprices/observer</class>
			<method>layeredPrice</method>
		</customerprices> -->
                <customerprices_price_order>
                        <class>customerprices/observer</class>
			<method>sortByPrice</method>
                </customerprices_price_order>
	    </observers>
        </catalog_block_product_list_collection>
  <!-- <catalog_product_collection_load_after>
  	<observers>
  	  <customerprices>
  	    <class>customerprices/observer</class>
  	    <method>collectionLoadAfter</method>
  	  </customerprices>
  	</observers>
  </catalog_product_collection_load_after> -->
  <catalog_product_load_after>
  	<observers>
  	  <customerprices>
  	    <class>customerprices/observer</class>
  	    <method>productLoadAfter</method>
  	  </customerprices>
  	</observers>
  </catalog_product_load_after>
  <catalog_product_get_final_price>
        <observers>
            <customerprices>
                <class>customerprices/observer</class>
                <method>processFrontFinalPrice</method>
            </customerprices>
        </observers>
    </catalog_product_get_final_price>
  </events>
  </global>
  <adminhtml>
  <events>
        <adminhtml_customer_save_after>
            <observers>
		<customerprices>
	            <class>customerprices/observer</class>
		    <method>customerSaveAfter</method>
		</customerprices>
	    </observers>
        </adminhtml_customer_save_after>
        <catalog_product_get_final_price>
            <observers>
                <customerprices>
                    <class>customerprices/observer</class>
                    <method>processBackFinalPrice</method>
                </customerprices>
            </observers>
        </catalog_product_get_final_price>
        <core_block_abstract_to_html_before>
            <observers>
                <customerprices>
                    <type>singleton</type>
                    <class>customerprices/observer</class>
                    <method>coreBlockAbstractToHtmlBefore</method>
                </customerprices>
            </observers>
        </core_block_abstract_to_html_before>
   </events>
    <layout>
      <updates>
	<customerprices>
	  <file>webtex_customerprices.xml</file>
	</customerprices>
      </updates>
    </layout>
    <menu>
      <system>
        <children>
          <convert>
            <children>
              <customerprices>
                 <title>Prices per Customer</title>
                    <children>
                        <export translate="title">
                            <title>Export Prices</title>
                            <action>adminhtml/customerprices_convert/export</action>
                        </export>
                        <import translate="title">
                            <title>Import Prices</title>
                            <action>adminhtml/customerprices_convert/import</action>
                        </import>
                    </children>
                </customerprices>
              </children>
            </convert>
          </children>
       </system>
    </menu>
  </adminhtml>
  <admin>
    <routers>
      <adminhtml>
          <args>
              <modules>
                  <customerprices after="Mage_Adminhtml">Webtex_CustomerPrices_Adminhtml</customerprices>
              </modules>
          </args>
      </adminhtml>
    </routers>
  </admin>
  <default>
    <customerprices>
      <settings>
	<isenable>1</isenable>
	<hide_price>1</hide_price>
      </settings>
    </customerprices>
  </default>
</config>
