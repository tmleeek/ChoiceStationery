<config>
    <tabs>
        <webtex translate="label">
            <label>WEBTEX</label>
            <sort_order>150</sort_order>
        </webtex>
    </tabs>
    <sections>
        <customerprices translate="label">
            <label>Prices per Customer</label>
            <tab>webtex</tab>
            <frontend_type>text</frontend_type>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Prices per Customer</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <isenable translate="label,comment">
                            <label>Enable Prices per Customer</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </isenable>
                        <hide_price translate="label comment">
                            <label>Hide prices for visitors </label>
                            <comment>Global for all products</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </hide_price>
		    </fields>
		</settings>
	    </groups>
	</customerprices>
    </sections>
</config>

