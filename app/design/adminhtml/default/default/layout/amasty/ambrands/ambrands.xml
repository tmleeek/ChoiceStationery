        </reference>
        <reference name="content">
            <block type="ambrands/adminhtml_brand_entity_edit" name="ambrands.brand.entity.edit"></block>
        </reference>
        <reference name="js">
            <block type="core/template" name="catalog.wysiwyg.js" template="catalog/wysiwyg/js.phtml"/>
