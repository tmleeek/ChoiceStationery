<script>
    function ewAddProductToCart(url, pid) {
        var elem = $('qty_' + pid);
        var qty = 0;
        if (elem && elem.value > 0) {
            qty = elem.value;
        }
        if (qty > 0) {
            if (url.indexOf('?') >= 0) url += '&qty=' + qty;
            else url += '?qty=' + qty;
        }
        setLocation(url);
    }
