<div class="page-title">
    <h1><?php echo $this->__('Edit Account Information') ?></h1>
</div>
<?php echo $this->getMessagesBlock()->toHtml() ?>
<form action="<?php echo $this->getUrl('customer/account/editPost') ?>" method="post" id="form-validate" autocomplete="off">
    <div class="fieldset">
        <?php echo $this->getBlockHtml('formkey')?>
        <div class="panel panel-default">
			<div class="panel-heading">
				<h2 class=""><?php echo $this->__('Account Information') ?></h2>
			</div>
			<div class="panel-body">
				<?php echo $this->getLayout()->createBlock('customer/widget_name')->setObject($this->getCustomer())->toHtml() ?>
				<div class="row">
					<div class="col-md-8 col-xs-12">
						<label for="email" class="required control-label"><em>*</em><?php echo $this->__('Email Address') ?></label>
						<input type="text" name="email" id="email" value="<?php echo $this->escapeHtml($this->getCustomer()->getEmail()) ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Email Address')) ?>" class="input-text required-entry validate-email form-control" />
					</div>
				</div>
			<?php $_dob = $this->getLayout()->createBlock('customer/widget_dob') ?>
			<?php if ($_dob->isEnabled()): ?>
				<div><?php echo $_dob->setDate($this->getCustomer()->getDob())->toHtml() ?></div>
			<?php endif ?>
			<?php $_taxvat = $this->getLayout()->createBlock('customer/widget_taxvat') ?>
			<?php if ($_taxvat->isEnabled()): ?>
				<div><?php echo $_taxvat->setTaxvat($this->getCustomer()->getTaxvat())->toHtml() ?></div>
			<?php endif ?>
			<?php $_gender = $this->getLayout()->createBlock('customer/widget_gender') ?>
			<?php if ($_gender->isEnabled()): ?>
				<div><?php echo $_gender->setGender($this->getCustomer()->getGender())->toHtml() ?></div>
			<?php endif ?>
				<div class="row">
					<div class="col-md-8 col-xs-12">
						<label for="current_password" class="required control-label"><em>*</em><?php echo Mage::helper('core')->quoteEscape($this->__('Current Password')) ?></label>
						<!-- This is a dummy hidden field to trick firefox from auto filling the password -->
						<input type="text" class="input-text no-display form-control" name="dummy" id="dummy" />
						<input type="password" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Current Password')) ?>" class="input-text required-entry form-control" name="current_password" id="current_password" />
					</div>
				</div>
				<!--li class="control"-->
				<div class="row">
					<div class="col-xs-12">
						<input type="checkbox" name="change_password" id="change_password" value="1" onclick="setPasswordForm(this.checked)" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Change Password')) ?>"<?php if($this->getCustomer()->getChangePassword()==1): ?> checked="checked"<?php endif; ?> class="checkbox" /><label for="change_password"><?php echo $this->__('Change Password') ?></label>
					</div>
				</div>
			</div>
        </div>
    </div>
    <div class="fieldset" style="display:none;">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class=""><?php echo $this->__('Change Password') ?></h2>
			</div>
			<div class="panel-body">
				<div class="fields row">
					<div class="field col-md-4 col-xs-12">
						<label for="password" class="required control-label"><em>*</em><?php echo $this->__('New Password') ?></label>
						<input type="password" title="<?php echo Mage::helper('core')->quoteEscape($this->__('New Password')) ?>" class="input-text required-entry validate-password form-control" name="password" id="password" />
					</div>
					<div class="field col-md-4 col-xs-12">
						<label for="confirmation" class="required control-label"><em>*</em><?php echo $this->__('Confirm New Password') ?></label>
						<input type="password" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Confirm New Password')) ?>" class="input-text required-entry validate-cpassword form-control" name="confirmation" id="confirmation" />
					</div>
				</div>
			</div>
        </div>
    </div>
    <div class="buttons-set">
        <p class="required"><?php echo $this->__('* Required Fields') ?></p>
        <p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><small>&laquo; </small><?php echo $this->__('Back') ?></a></p>
        <button type="submit" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Save')) ?>" class="button"><span><span><?php echo $this->__('Save') ?></span></span></button>
    </div>
</form>
<script type="text/javascript">
//<![CDATA[
    var dataForm = new VarienForm('form-validate', true);
    function setPasswordForm(arg){
        $('password').up('.fieldset')[arg ? 'show': 'hide']();
    }

    <?php if($this->getCustomer()->getChangePassword()): ?>
        setPasswordForm(true);
    <?php endif; ?>
//]]>
</script>
