?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>

    <div class="recently-viewed-item">
              <p class="title">recently viewed</p>
              <!--end of title-->
              <?php $i=0; foreach ($_products as $_product): ?>
              <div class="left col-md-5">
                <a href="<?php echo $this->getProductUrl($_product) ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135) ?>" width="91" height="91" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" /></a>
              </div>
              <div class="right col-md-7">
                <p class="item-name"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name') ?></p>
                <p class="inc-price col-md-12"><span>&pound;<?php echo $this->helper('tax')->getPrice($_product, $_product->getPrice(), true);?></span>Inc VAT</p>
                <p class="ex-price col-md-12"><span>&pound;<?php echo $this->helper('tax')->getPrice($_product, $_product->getPrice(), false);?></span> ex VAT</p>
              </div>
          <?php endforeach;?>
            </div>
            <!--end of recently-viewed-itm--> 
<?php endif; ?>
